endif

# Register all the available modules
#TARGET_EXPORT_FLAG    += TGT_REGISTER_PLATFORM_VERSIONS

# Enable profile stub
ifneq "${NO_PROFILE}" "1"
# Buffer profile
TARGET_EXPORT_FLAG    += HAL_PROFILE_ON_BUFFER
